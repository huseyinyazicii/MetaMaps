@model ProfileModel

<div class="p-5 text-center" style="border-bottom: 1px solid #dedede">
    <h1 class="box-title">PROFİL</h1>
</div>

<div class="container mb-4">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-md-8 p-5">
            <div class="text-center mb-3">
                <img src="~/Images/Users/@Model.Image" alt="" style="height: 200px;">
            </div>
            <form asp-action="Details" asp-controller="Profile" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" asp-for="Name">İsim</label>
                    <input type="text" class="form-control" asp-for="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label"  asp-for="Surname">Soyisim</label>
                    <input type="text" class="form-control"  asp-for="Surname">
                    <span class="text-danger" asp-validation-for="Surname"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="ImagePath">Profil Fotoğrafı</label>
                    <input type="file" class="form-control" placeholder="Resim Seç" asp-for="ImagePath">
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="text-center">
                    <button type="submit" class="btn btn1">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>