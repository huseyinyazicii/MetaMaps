@model ResetPasswordViewModel

<div class="container p-5">
    <div class="row justify-content-center align-content-center my-5">

        <div class="text-center">
            <img src="~/MetaMapsTemplate/img/forgot-password.png" style="height:200px" alt="Alternate Text" />
        </div>
        <div class="text-center">
            <h3 class="mt-3">Şifre Sıfırlama</h3>
            <p>Aşağıya yeni şifrenizi girerek şifrenizi sıfırlayabilirsiniz. </p>
        </div>

        <div class="col-md-6 text-center">
            <form asp-controller="Security" asp-action="ResetPassword" method="post">
                <div class="form-outline mb-4">
                    <label class="form-label" asp-for="Email">Email Adres</label>
                    <input type="email" asp-for="Email" class="form-control form-control-lg" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" asp-for="Password">Email Adres</label>
                    <input type="password" asp-for="Password" class="form-control form-control-lg" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" asp-for="ConfirmPassword">Email Adres</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control form-control-lg" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
                <input type="hidden" asp-for="Code" />
                <div class="text-center">
                    <button class="btn btn1">Sıfırla</button>
                </div>
            </form>
        </div>

    </div>
</div>