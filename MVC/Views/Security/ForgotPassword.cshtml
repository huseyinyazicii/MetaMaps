<div class="container p-5">
    <div class="row justify-content-center align-content-center my-5">

        <div class="text-center">
            <img src="~/MetaMapsTemplate/img/forgot-password.png" style="height:200px" alt="Alternate Text" />
        </div>
        <div class="text-center">
            <h3 class="mt-3">Şifremi Unuttum</h3>
            <p>Aşağıya mail adresinizi giriniz. </p>
        </div>

        <div class="col-md-6 text-center">
            <form asp-controller="Security" asp-action="ForgotPassword" method="post">
                <div class="form-outline mb-4">
                    <label class="form-label" for="email">Email Adresi</label>
                    <input type="email" name="email" id="email" class="form-control form-control-lg" />
                </div>
                <div class="text-center">
                    <button class="btn btn-danger" type="submit">Sıfırla</button>
                </div>
            </form>
        </div>

    </div>
</div>
