@model LoginViewModel

<div class="container-fluid h-custom" style="padding:100px 10px">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-9 col-lg-6 col-xl-5">
            <img src="~/MetaMapsTemplate/img/loginPicture.svg" class="img-fluid" alt="Sample image">
        </div>
        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
            <h1 class="text-center pb-2 box-title">Giriş Yap</h1>
            <form asp-controller="Security" asp-action="Login" method="post">
                <div class="mb-3">
                    <label asp-for="UserMail" class="form-label">Email</label>
                    <input type="email" asp-for="UserMail" class="form-control">
                    <span class="text-danger" asp-validation-for="UserMail"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Şifre</label>
                    <input type="password" class="form-control" asp-for="Password">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="d-flex justify-content-around align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" checked />
                        <label class="form-check-label"> Beni Hatırla </label>
                    </div>
                    <a asp-action="ForgotPassword" asp-controller="Security">Şifremi Unuttum</a>
                </div>
                <div class="text-center text-center  mt-4 pt-2">
                    <button type="submit" class="btn btn1" style="padding-left: 2.5rem; padding-right: 2.5rem;">
                        Giriş
                    </button>
                    <p class="small fw-bold mt-2 pt-1 mb-0">
                        Üye değil misiniz? <a asp-action="Register" asp-controller="Security" style="color: #415A77">Üye Ol</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>