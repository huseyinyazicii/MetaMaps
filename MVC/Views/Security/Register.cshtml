@model RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Üye Ol</title>
    <link href="~/Libraries/Bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/MetaMapsTemplate/css/login.css" rel="stylesheet" />
</head>
<body>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="~/MetaMapsTemplate/img/loginPicture.svg" class="img-fluid" alt="">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1 mb-3">
                    <h1 class="text-center pb-2">Üye Ol</h1>
                    <form asp-controller="Security" asp-action="Register" method="post">
                        <div class="form-outline mb-4">
                            <label class="form-label" asp-for="Name">İsim</label>
                            <input type="text" asp-for="Name" class="form-control form-control-lg" />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" asp-for="Surname">Soyisim</label>
                            <input type="text" asp-for="Surname" class="form-control form-control-lg" />
                            <span class="text-danger" asp-validation-for="Surname"></span>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" asp-for="Email">Email Adresi</label>
                            <input type="email" asp-for="Email" class="form-control form-control-lg" />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" asp-for="UserName">Kullanıcı Adı</label>
                            <input type="text" asp-for="UserName" class="form-control form-control-lg" />
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" asp-for="Password">Şifre</label>
                            <input type="password" asp-for="Password" class="form-control form-control-lg" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" asp-for="ConfirmPassword">Şifre Onayla</label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control form-control-lg" />
                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Üye Ol</button>
                        </div>

                        <div class="divider d-flex align-items-center my-4">
                            <p class="text-center fw-bold mx-3 mb-0 text-muted">Yada</p>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <a asp-action="Login" asp-controller="Security" type="submit" class="btn btn-primary btn-lg btn-block">Giriş Yap</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Libraries/Jquery/jquery.min.js"></script>
    <script src="~/Libraries/Bootstrap/js/bootstrap.bundle.min.js"></script>
    @await Component.InvokeAsync("Notyf")

</body>
</html>