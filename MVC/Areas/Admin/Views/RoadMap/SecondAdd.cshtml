@model RoadMapModel

@section Css{
    <link href="~/AdminPanel/css/addroadmap.css" rel="stylesheet" />
}

<h4 class="text-center mb-3">Adımlar ve Dallar <span class="text-muted h6">(*Yol Haritasının sırası aşağıdan yukarıyadır.)</span></h4>

<div class="row justify-content-center pb-5">
    <div class="col-xl-3 col-md-4 col-8 py-2 text-center" style="background-color: #efefef;">
        <input id="search" onkeyup="search()" type="text" class="form-control mb-3" placeholder="Ara">
        <div id="branchlist" class="box shadow">
            @for (int i = 0; i < Model.Branches.Count; i++)
            {
                <div draggable="true" id="@Model.Branches[i].Id" class="branch">@Model.Branches[i].Name</div>
            }
        </div>
        <button class="btn btn2 mt-2">Yeni Dal Ekle</button>
    </div>
    <div class="col-xl-6 col-lg-7 col-md-8 col-8" style="background-color: #efefef;">
        <div id="steps" style="padding: 10px 0 10px 0;">

            <button id="ekle" class="btn btn2 mb-3">Adım Ekle</button>
            <a asp-action="RoadMapPage" asp-controller="RoadMap" asp-area="Admin" class="btn btn2 mb-3 text-white" id="gonder" style="float: right;">Gönder</a>

            <div class="step shadow" style="border-radius: 10px;">
                <div class="mb-3">
                    <label class="form-label">Adımın İsmi</label>
                    <span onclick="tikla(this)" class="btn btn1 mb-2" style="float: right; padding: 2px 10px 2px 10px;">Sil</span>
                    <select id="stepname" class="form-control">
                        @for (int i = 0; i < Model.Steps.Count; i++)
                        {
                            <option value=@Model.Steps[i].Id>@Model.Steps[i].Name</option>
                        }
                    </select>
                </div>
                <div class="box box2">

                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="roadMapId" value="@Model.RoadMapId" />

@section Scripts{
    <script src="~/AdminPanel/js/addroadmap.js"></script>
}