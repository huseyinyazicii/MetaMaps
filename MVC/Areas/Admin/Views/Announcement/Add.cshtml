@model AnnouncementModel

<h1 class="mb-3">
    Duyuru Ekle
    <a asp-action="AnnouncementPage" asp-controller="Announcement" asp-area="Admin" class="btn btn2" style="float: right;">Duyurular</a>
</h1>

<form  asp-action="Add" asp-controller="Announcement" asp-area="Admin" method="post">
    <div class="form-group">
        <label asp-for="Title">Başlık</label>
        <input type="text" class="form-control" asp-for="Title">
        <span class="form-text text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content">İçerik</label>
        <textarea class="form-control" rows="3" asp-for="Content"></textarea>
        <span class="form-text text-danger" asp-validation-for="Content"></span>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn1">Ekle</button>
    </div>
</form>