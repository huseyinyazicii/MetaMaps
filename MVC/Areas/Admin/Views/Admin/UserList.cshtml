@model IEnumerable<User>

<h1 class="mb-3">
    Kullanıcı Listesi
    <a asp-action="RoleList" asp-controller="Admin" asp-area="Admin" class="btn btn2 ml-2" style="float: right;">Roller</a>
</h1>

<table class="table text-center table-bordered shadow">
    <thead class="thead-dark">
        <tr>
            <th scope="col">İsim</th>
            <th scope="col">Soyisim</th>
            <th scope="col">Email</th>
            <th scope="col">Kullanıcı Adı</th>
            <th scope="col">Email Doğrulama</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="@(item.EmailConfirmed?"":"bg-warning")">
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Email</td>
                <td>@item.UserName</td>
                <td>@item.EmailConfirmed</td>
                <td>
                    <a asp-action="UserEdit" asp-controller="Admin" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-primary">Düzenle</a>
                    <a href="#" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>